<div class="container">
  <!-- The Modal -->
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
 <!-- Modal Header -->
    <div class="modal-header">
      <h4 class="modal-title"><kbd>Registro de aplicaciones</kbd></h4>
    </div>
<!-- Modal body -->
  <div class="modal-body">
    <div class="modal-content tabcontent">
        <div class="dialog">
  <%= simple_form_for(@application) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <form class="form-inline">
          <label class="form-group col-md-4">
             <%= f.input :name, class: "form-control mb-2 mr-sm-2" %>
          </label>

          <label class="form-group col-md-4">
              <%= f.label :state%>
              <%= f.select :state, options_for_select([['Activo', true], ['Inactivo', false]]) %>
          </label>

        <label class="form-group">
          <%= f.submit "Guardar", class: "btn btn-info btn-md " %>
         </label>

         <label class="form-group">
           <%= link_to 'Regresar', applications_path, class: "btn btn-info btn-md" %>
        </label>
        
      <% end %>
</form>
       </div>
  </div>
  </div>
  </div>
  </div>
  </div>