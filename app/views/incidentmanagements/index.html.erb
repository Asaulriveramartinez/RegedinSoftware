<br/><br/><br/>
  <h1 style="color: #6c757d;">Gestión incidencias</h1>
    <div class="tab">
    <button class="tablinks active" onclick="openLink(event, 'Consulta incidencia')"><%= link_to 'Consulta incidencia', incidents_path, style: "color:rgb(23, 162, 184);" %></button>
    <button class="tablinks" onclick="openLink(event, 'Estadistica')"><%= link_to 'Estadistica', style: "color:rgb(23, 162, 184);" %></button>
  </div>
<br/>
<%= notice%>
 <br/><br/>

<div class="modal-content text-center">
<div class="table-responsive">
<table class="table">
<thead>
  <div class="row">
    <tr class="success btn-info active justify-content-center">
    <th colspan="3">Gestionar</th>
      <th>Usuario</th>
      <th>Incidencia</th>
      <th>Fecha</th>
      <th>Descripción</th>
      <th>Estado</th>
      <th>Acciones</th>
    </tr>
  </div>
</thead>

  <% @incidentmanagements.each do |incidentmanagement| %>

  <tbody>
    <div class="row">
      <tr class="text-center">
        <td colspan="3"><%= link_to incidentmanagement.id, incidentmanagement_path(incidentmanagement), class:"btn btn-info active"%></td>
        <td><%= incidentmanagement.user.name %></td>
        <td><%= incidentmanagement.incident.id %></td>
        <td><%= incidentmanagement.datereport %></td>
        <td><%= incidentmanagement.description %></td>
        <td>
          <% if incidentmanagement.state %>
             <img src="/img/estado_activo_24.png" alt="Activo" />
          <% else %>           
             <img src="/img/estado_falso_24.png" alt="Inactivo" />
          <% end %>
        </td>
        <td>
          <%= link_to edit_incidentmanagement_path(incidentmanagement) do %>
            <%= image_tag "/img/edit_24.png", :title=>"Editar" %>
          <% end %>
          &nbsp; &nbsp;
           <%= link_to incidentmanagement, method: :delete, data: { confirm: 'Desea eliminar?', remote: true } do %>
                <%= image_tag "/img/eliminar_24.png", :title=>"Eliminar" %>
           <% end %>
        </td>
       </tr>
      </div>
      </tbody>

    <% end %>
</table>
</div>
</div>
