<br/><br/><br/>
  <h1 style="color: #6c757d;">Reporte incidencias</h1>
    <div class="tab">
    <button class="tablinks" onclick="openLink(event, 'Reportar incidencia')"><%= link_to 'Reportar incidencia', new_incident_path, style: "color:rgb(23, 162, 184);" %></button>
    <button class="tablinks active" onclick="openLink(event, 'Consulta incidencia')"><%= link_to 'Consulta incidencia', incidents_path, style: "color:rgb(23, 162, 184);" %></button>
    <button class="tablinks" onclick="openLink(event, 'Estadistica')"><%= link_to 'Estadistica', style: "color:rgb(23, 162, 184);" %></button>
  </div>
<br/>
<%= notice%>
 <br/><br/>

<div class="modal-content text-center">
<div class="table-responsive">
<table class="table">
<thead>
  <div class="row">
    <tr class="success btn-info active justify-content-center">
    <th colspan="3">Editar</th>
    <th>Reportar Aplicación</th>
    <th>Area</th>
    <th>Quien reporta</th>
    <th>Nivel de Criticidad</th>
    <th>Fecha y Hora</th>
    <th>Descripción</th>
    <th>Estado</th>
    </tr>
  </div>
</thead>

<% @incidents.each do |incident| %>

<tbody>
  <div class="row">
    <tr class="justify-content-center">
        <td colspan="3"><%= link_to incident.id, incident_path(incident), class:"btn btn-info active"%></td>
        <td><%= incident.userapplication.applicationclient.application.name %></td>
        <td><%= incident.area.name %></td>
        <td><%= incident.user.name %></td>
        <td><%= incident.criticality.name %></td>
        <td><%= incident.datereport %></td>
        <td><%= incident.description %></td>
        <td>
          <% if incident.state %>
             <img src="/img/estado_activo_24.png" alt="Activo" />
          <% else %>           
             <img src="/img/estado_falso_24.png" alt="Inactivo" />
          <% end %>
        </td>
    </tr>
  </div>
</tbody>
    <%end%>
  </table>
</div>
</div>
<div id="spacing">
<%= paginate(@incidents) %>
</div>